<section class="search">
    <h1>Search</h1>

    <form class="search-form" method="GET">
        <input type="text" class="search-name" name="searchName" value="{{searchName}}" placeholder="Search Name...">
        <input type="text" class="search-type" name="searchType" value="{{searchType}}" placeholder="Search Type...">
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#each electronics}}
    <!--If there are matches after search-->
    <div class="search-result">
        <div class="search-list">
           {{>electronicsCard}}
        </div>

    </div>
    {{else}}
        <!--If there are no matches-->
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/each}}
</section>